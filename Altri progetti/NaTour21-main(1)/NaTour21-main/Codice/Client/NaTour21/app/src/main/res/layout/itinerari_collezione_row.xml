<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:id="@+id/mainLayoutItinerariCollezioneRow">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/veryLightBlue">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewTitoloItinerarioCollectionCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titolo"
                android:textColor="@color/grey"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewFineItinerariCollectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="100dp"
                android:text="@string/puntoFineItinerariCard"
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/buttonDeleteItinerarioCollectionCard"
                app:layout_constraintStart_toStartOf="@+id/textViewInizioItinerarioCollectionCard"
                app:layout_constraintTop_toBottomOf="@+id/textViewInizioItinerarioCollectionCard" />

            <TextView
                android:id="@+id/textViewInizioItinerarioCollectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="100dp"
                android:text="@string/puntoInizioItinerariCard"
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/buttonInfoItinerarioCollectionCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitoloItinerarioCollectionCard" />

            <TextView
                android:id="@+id/textViewDifficultyItinerarioCollectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="100dp"
                android:text="@string/durataItinerariCard"
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/buttonDeleteItinerarioCollectionCard"
                app:layout_constraintStart_toStartOf="@+id/textViewDurataItinerarioCollectionCard"
                app:layout_constraintTop_toBottomOf="@+id/textViewDurataItinerarioCollectionCard" />

            <TextView
                android:id="@+id/textViewDurataItinerarioCollectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="100dp"
                android:text="@string/durataItinerariCard"
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/buttonDeleteItinerarioCollectionCard"
                app:layout_constraintStart_toStartOf="@+id/textViewFineItinerariCollectionCard"
                app:layout_constraintTop_toBottomOf="@+id/textViewFineItinerariCollectionCard" />

            <ImageButton
                android:id="@+id/buttonInfoItinerarioCollectionCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/veryLightBlue"
                android:src="@drawable/ic_baseline_info2_24"
                app:cornerRadius="15sp"
                app:iconGravity="start"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textViewTitoloItinerarioCollectionCard"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.177"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/buttonDeleteItinerarioCollectionCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/veryLightBlue"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_delete_forever_24"
                app:cornerRadius="15sp"
                app:iconGravity="start"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/buttonInfoItinerarioCollectionCard"
                app:layout_constraintStart_toStartOf="@+id/buttonInfoItinerarioCollectionCard"
                app:layout_constraintTop_toBottomOf="@+id/buttonInfoItinerarioCollectionCard"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>