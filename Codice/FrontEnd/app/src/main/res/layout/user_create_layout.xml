<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp"
    app:strokeWidth="1dp"
    app:strokeColor="#787486">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15sp">

        <TextView
            android:text="CREATE USER"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:layout_width="350dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:text="Enter Email : "
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:id="@+id/edit_user_email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:hint="Email"
            android:textColorHint="#808080"
            android:background="@drawable/shape_edit_text_popup"
            android:paddingLeft="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Enter Name : "
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:hint="Name"
            android:textColorHint="#808080"
            android:background="@drawable/shape_edit_text_popup"
            android:paddingLeft="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Enter Surname : "
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:id="@+id/edit_user_surname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:hint="Surname"
            android:textColorHint="#808080"
            android:background="@drawable/shape_edit_text_popup"
            android:paddingLeft="5dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/userCreateCancel_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_login_button"
                android:text="CANCEL"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/userCreateOk_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_positive_button"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"/>


        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
